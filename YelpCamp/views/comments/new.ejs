<% include ../partials/header %>

<!-- Spacing -->
<div class="container"> 
    <div class="row">
        <h1 style="text-align: center">Add New Comment to <%= campground.name %></h1>
        <!-- Style to make the inputs smaller and centered-->
        <div style="width: 30%; margin: 30px auto;">  
             <form action="/campgrounds/<%= campground._id%>/comments" method="POST">
                 <!-- Form group for each element, gives spacing b/t each -->
                 <div class="form-group">
                    <input class="form-control" type="text" placeholder="Comment content" name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
             <a href= "/campgrounds">Back</a>
        </div>
    </div>
    
</div>
<% include ../partials/footer %>